                        Style="{StaticResource MaterialDesignFlatMidBgButton}" materialDesign:ButtonAssist.CornerRadius="0 0 0 0" 
                        materialDesign:RippleAssist.IsDisabled="True" Padding="0,0,0,0" Click="InfoBtn_Click"
